<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Hook"
    android:orientation="vertical"
    android:background="@color/white"
    android:padding="20dp">

    <ImageView
        android:id="@+id/hook_img"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/hook_imglogo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bungee"
        android:text="Hook a playground"
        android:textColor="@color/black"
        android:textSize="35sp"
        android:id="@+id/logo_name"
        />

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:startIconDrawable="@drawable/city_menu"
        android:hint="Select City">

        <AutoCompleteTextView
            android:id="@+id/autoCompleteTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="none"
            android:enabled="false"
            android:textColor="@color/white"
             />


    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:startIconDrawable="@drawable/sport_menu"
        android:hint="Select Sport">

        <AutoCompleteTextView
            android:id="@+id/autoCompleteTextView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="none"
            android:enabled="false"
            android:textColor="@color/white"
            />


    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/search_map_btn"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:background="#00000000"
        android:text="* Select Location on map"
        android:textColor="@color/black"
        android:layout_gravity="center"
        android:elevation="0dp"

        android:layout_marginTop="20dp"
        />

    <Button
        android:id="@+id/Hook_btn"
        android:layout_width="200dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:background="@color/black"
        android:text="HOOK"
        android:textColor="@color/white"
        android:layout_marginTop="20dp"
         />




</LinearLayout>